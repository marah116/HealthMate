<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <TextView
        android:id="@+id/centerDetailsTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/center_details"
        android:textSize="24sp"
        android:textColor="#3F51B5"
        android:textStyle="bold"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/centerDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textSize="18sp"
        android:textColor="#333"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/centerPhoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_0000000000"
        android:textSize="18sp"
        android:textColor="#333"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/centerHoursTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hours_9_00_am_5_00_pm"
        android:textSize="18sp"
        android:textColor="#333"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/centerLocationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location_city_country"
        android:textSize="18sp"
        android:textColor="#333"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/centerServicesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/services_nutrition_plans_consultations"
        android:textSize="18sp"
        android:textColor="#333"
        android:layout_marginTop="16dp"/>

</LinearLayout>
